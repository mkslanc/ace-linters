{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client", "node"]
  },
  "include": [
    "vite.config.ts",
    "packages/demo/**/*.ts",
    "packages/demo/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "build",
    "**/build"
  ]
}
